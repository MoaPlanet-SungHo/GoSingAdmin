<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <com.moaplanet.gosingadmin.common.view.CommonTitleBar
        android:id="@+id/title_account_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_fragment_account_register_account_info_group"
        android:layout_width="0dp"
        android:layout_height="64.7dp"
        android:background="@color/color_f8f8f8"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_account_register">

        <TextView
            android:id="@+id/tv_fragment_account_register_account_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.7dp"
            android:fontFamily="@font/font_gd_15"
            android:lineSpacingExtra="4dp"
            android:text="현재 등록된 출금계좌"
            android:textColor="@color/color_777777"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_fragment_account_register_account_info_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/font_gd_15"
            android:lineSpacingExtra="4.7dp"
            android:text="국민은행"
            android:textColor="@color/color_000000"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fragment_account_register_account_info_title" />

        <TextView
            android:id="@+id/tv_fragment_account_register_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/font_gd_15"
            android:lineSpacingExtra="4.7dp"
            android:text="000000-00-000000"
            android:textColor="@color/color_000000"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@id/tv_fragment_account_register_account_info_bank_name"
            app:layout_constraintTop_toBottomOf="@id/tv_fragment_account_register_account_info_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_account_register_guide_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/font_gd_14"
        android:lineSpacingExtra="5.3dp"
        android:text="인출 계좌를 등록하세요"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_fragment_account_register_account_info_group" />

    <TextView
        android:id="@+id/tv_account_register_bank_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font_gd_14"
        android:lineSpacingExtra="4.3sp"
        android:text="은행"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/tv_account_register_guide_text"
        app:layout_constraintTop_toBottomOf="@id/tv_account_register_guide_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_account_register_bank_select"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border_rect_0_0_0_0_1dp_e9e9e9_ffffff"
        app:layout_constraintEnd_toEndOf="@id/tv_account_register_guide_text"
        app:layout_constraintStart_toStartOf="@id/tv_account_register_guide_text"
        app:layout_constraintTop_toBottomOf="@id/tv_account_register_bank_select_title">

        <ImageView
            android:id="@+id/tv_fragment_card_selected_arrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/ic_aaaaaa_bottom_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_fragment_account_register_select_bank"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="은행을 선택하세요."
            android:lineSpacingExtra="4.7dp"
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:textColor="#aaaaaa"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_fragment_card_selected_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_account_register_account_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/font_gd_14"
        android:lineSpacingExtra="4.3sp"
        android:text="계좌번호"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/cl_account_register_bank_select"
        app:layout_constraintTop_toBottomOf="@id/cl_account_register_bank_select" />

    <EditText
        android:id="@+id/et_account_register_account_number"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border_rect_0_0_0_0_1dp_e9e9e9_ffffff"
        android:gravity="center_vertical"
        android:hint="계좌번호를 '-'를 제외하고 입력하세요."
        android:lineSpacingExtra="4.7dp"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:textColor="#aaaaaa"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/tv_account_register_guide_text"
        app:layout_constraintStart_toStartOf="@id/tv_account_register_guide_text"
        app:layout_constraintTop_toBottomOf="@id/tv_account_register_account_number_title" />

    <TextView
        android:id="@+id/tv_account_register_account_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/font_gd_14"
        android:lineSpacingExtra="4.3sp"
        android:text="예금주"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/cl_account_register_bank_select"
        app:layout_constraintTop_toBottomOf="@id/et_account_register_account_number" />

    <EditText
        android:id="@+id/tv_account_register_account_name"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border_rect_0_0_0_0_1dp_e9e9e9_ffffff"
        android:gravity="center_vertical"
        android:hint="해당 계좌의 예금주의 성명을 입력하세요."
        android:lineSpacingExtra="4.7dp"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:textColor="#aaaaaa"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/tv_account_register_guide_text"
        app:layout_constraintStart_toStartOf="@id/tv_account_register_guide_text"
        app:layout_constraintTop_toBottomOf="@id/tv_account_register_account_name_title" />


    <Button
        android:id="@+id/btn_fragment_account_register"
        style="@style/CommonGradientButton"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginStart="@dimen/common_gradient_button_width_shadow_left_right_space"
        android:layout_marginEnd="@dimen/common_gradient_button_width_shadow_left_right_space"
        android:gravity="center"
        android:text="등록하기"
        android:textColor="@color/color_ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>