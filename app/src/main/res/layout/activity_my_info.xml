<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <com.moaplanet.gosingadmin.common.view.CommonTitleBar
        android:id="@+id/common_information_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_my_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_gd_14"
        android:lineSpacingExtra="4.3dp"
        android:text="@string/my_info_email"
        android:textColor="@color/color_000000"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/v_main_email_bottom_line"
        app:layout_constraintStart_toStartOf="@id/v_main_email_bottom_line"
        app:layout_constraintTop_toBottomOf="@id/common_information_title_bar"
        tools:ignore="SpUsage,UnusedAttribute" />

    <TextView
        android:id="@+id/my_info_email_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40.7dp"
        android:fontFamily="@font/font_gd_15"
        android:lineSpacingExtra="4.7dp"
        android:text="@string/my_info_email_content"
        android:textColor="@color/color_000000"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_my_info_email"
        app:layout_constraintStart_toEndOf="@id/tv_main_my_info_email"
        app:layout_constraintTop_toTopOf="@id/tv_main_my_info_email"
        tools:ignore="SpUsage" />

    <View
        android:id="@+id/v_main_email_bottom_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_my_info_email" />

    <TextView
        android:id="@+id/tv_main_my_info_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_gd_14"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4.3dp"
        android:text="@string/my_info_profile_image"
        android:textColor="@color/color_000000"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/v_main_profile_image_bottom_line"
        app:layout_constraintStart_toStartOf="@id/tv_main_my_info_email"
        app:layout_constraintTop_toBottomOf="@id/v_main_email_bottom_line"
        tools:ignore="SpUsage" />

    <ImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:contentDescription="@string/my_info_profile_image"
        android:scaleType="fitXY"
        android:src="@drawable/ic_common_profile_img"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_my_info_profile_image"
        app:layout_constraintStart_toStartOf="@id/my_info_email_content"
        app:layout_constraintTop_toTopOf="@id/tv_main_my_info_profile_image" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/common_main_change_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_my_info_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_main_my_info_profile_image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/font_gd_13"
            android:text="@string/my_info_profile_image_change"
            android:textColor="@color/color_aaaaaa"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_main_change_profile_image"
            app:layout_constraintEnd_toStartOf="@id/iv_main_change_profile_image"
            app:layout_constraintTop_toTopOf="@id/iv_main_change_profile_image"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/iv_main_change_profile_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/common_my_info_profile_image_change_description"
            android:scaleType="fitXY"
            android:src="@drawable/right_small_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_main_profile_image_bottom_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="@id/v_main_email_bottom_line"
        app:layout_constraintStart_toStartOf="@id/v_main_email_bottom_line"
        app:layout_constraintTop_toBottomOf="@id/tv_main_my_info_profile_image" />

    <TextView
        android:id="@+id/tv_main_my_info_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_gd_14"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4.3dp"
        android:text="@string/my_info_nickname"
        android:textColor="@color/color_000000"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/v_main_nickname_bottom_line"
        app:layout_constraintStart_toStartOf="@id/tv_main_my_info_email"
        app:layout_constraintTop_toBottomOf="@id/v_main_profile_image_bottom_line"
        tools:ignore="SpUsage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/my_info_profile_image"
        android:fontFamily="@font/font_gd_13"
        android:lineSpacingExtra="4.7dp"
        android:text="@string/my_info_nickname_content"
        android:textColor="@color/color_aaaaaa"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_my_info_nickname"
        app:layout_constraintStart_toStartOf="@id/my_info_email_content"
        app:layout_constraintTop_toTopOf="@id/tv_main_my_info_nickname"
        tools:ignore="SpUsage" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/common_main_change_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_my_info_nickname"
        app:layout_constraintEnd_toEndOf="@id/common_main_change_profile_image"
        app:layout_constraintTop_toTopOf="@id/tv_main_my_info_nickname">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/font_gd_13"
            android:text="@string/my_info_nickname_change"
            android:textColor="@color/color_aaaaaa"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_main_change_nickname"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/iv_main_change_nickname"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/common_my_info_nickname_change_description"
            android:scaleType="fitXY"
            android:src="@drawable/right_small_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/common_main_change_nickname"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_main_nickname_bottom_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="@id/v_main_email_bottom_line"
        app:layout_constraintStart_toStartOf="@id/v_main_email_bottom_line"
        app:layout_constraintTop_toBottomOf="@id/tv_main_my_info_nickname" />

    <TextView
        android:id="@+id/tv_main_my_info_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_gd_14"
        android:lineSpacingExtra="4.3dp"
        android:text="@string/my_info_password"
        android:textColor="@color/color_000000"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/v_main_password_bottom_line"
        app:layout_constraintStart_toStartOf="@id/tv_main_my_info_email"
        app:layout_constraintTop_toBottomOf="@id/v_main_nickname_bottom_line"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tv_activity_my_info_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_gd_15"
        android:lineSpacingExtra="4.7dp"
        android:text="@string/my_info_password_content"
        android:textColor="@color/color_000000"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_my_info_password"
        app:layout_constraintStart_toStartOf="@id/my_info_email_content"
        app:layout_constraintTop_toTopOf="@id/tv_main_my_info_password"
        tools:ignore="SpUsage" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/common_main_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_my_info_password"
        app:layout_constraintEnd_toEndOf="@id/common_main_change_nickname"
        app:layout_constraintTop_toTopOf="@id/tv_main_my_info_password">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/font_gd_13"
            android:text="@string/my_info_password_change"
            android:textColor="@color/color_aaaaaa"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_main_change_password"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/iv_main_change_password"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/common_my_info_password_change_description"
            android:scaleType="fitXY"
            android:src="@drawable/right_small_arrow"
            app:layout_constraintBottom_toBottomOf="@id/common_main_change_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/common_main_change_password" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_main_password_bottom_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="@id/v_main_email_bottom_line"
        app:layout_constraintStart_toStartOf="@id/v_main_email_bottom_line"
        app:layout_constraintTop_toBottomOf="@id/tv_main_my_info_password" />

    <TextView
        android:id="@+id/tv_main_my_info_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_gd_14"
        android:lineSpacingExtra="4.3dp"
        android:text="@string/my_info_phone_number"
        android:textColor="@color/color_000000"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/v_main_phone_number_bottom_line"
        app:layout_constraintStart_toStartOf="@id/tv_main_my_info_email"
        app:layout_constraintTop_toBottomOf="@id/v_main_password_bottom_line"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tv_activity_my_info_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_gd_15"
        android:lineSpacingExtra="4.7dp"
        android:text="@string/my_info_phone_number_content"
        android:textColor="@color/color_000000"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_my_info_phone_number"
        app:layout_constraintStart_toStartOf="@id/my_info_email_content"
        app:layout_constraintTop_toTopOf="@id/tv_main_my_info_phone_number"
        tools:ignore="SpUsage" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/common_main_change_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_my_info_phone_number"
        app:layout_constraintEnd_toEndOf="@id/common_main_change_password"
        app:layout_constraintTop_toTopOf="@id/tv_main_my_info_phone_number">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/font_gd_13"
            android:text="@string/my_info_phone_number_change"
            android:textColor="@color/color_aaaaaa"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_main_change_phone_number"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/iv_main_change_phone_number"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/common_my_info_phone_number_change_description"
            android:scaleType="fitXY"
            android:src="@drawable/right_small_arrow"
            app:layout_constraintBottom_toBottomOf="@id/common_main_change_phone_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/common_main_change_phone_number" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_main_phone_number_bottom_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="@id/v_main_email_bottom_line"
        app:layout_constraintStart_toStartOf="@id/v_main_email_bottom_line"
        app:layout_constraintTop_toBottomOf="@id/tv_main_my_info_phone_number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:fontFamily="@font/font_gd_15"
        android:lineSpacingExtra="4dp"
        android:text="@string/my_info_logout"
        android:textColor="@color/color_000000"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/common_main_change_phone_number"
        tools:ignore="SpUsage" />


</androidx.constraintlayout.widget.ConstraintLayout>