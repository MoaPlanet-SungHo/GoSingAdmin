<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:paddingBottom="17dp">

    <TextView
        android:id="@+id/tv_item_address_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/font_gd_15"
        android:paddingBottom="8dp"
        android:text="검색 결과 총 0건"
        android:textColor="@color/color_000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_item_address_header_underline"
        android:layout_width="0dp"
        android:layout_height="@dimen/under_line_height"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_address_header" />

    <TextView
        android:id="@+id/tv_item_address_road_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/font_gd_13"
        android:lineSpacingExtra="4.3dp"
        android:textColor="@color/color_000000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_item_address_header_underline"
        tools:ignore="SpUsage"
        tools:text="[도로명] 서울특별시 금천구 가산디지털 1로 168(가산동 우림 라이온스밸리)" />

    <TextView
        android:id="@+id/tv_item_address_jibun_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_gd_13"
        android:lineSpacingExtra="4.3dp"
        android:textColor="@color/color_000000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_address_road_address"
        tools:ignore="SpUsage"
        tools:text="[지번] 서울특별시 금천구 가산동 371-28" />

</androidx.constraintlayout.widget.ConstraintLayout>