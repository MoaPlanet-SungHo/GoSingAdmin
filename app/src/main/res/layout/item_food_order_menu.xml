<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="5dp"
    android:background="@color/color_ffffff">

    <ImageView
        android:id="@+id/iv_food_order_thumbnail"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:contentDescription="@string/item_food_order_food_description"
        android:scaleType="fitXY"
        android:src="@drawable/bg_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iv_food_order_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rect_0_0_0_0_03dp_aaaaaa_ffffff"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_food_order_thumbnail">

        <TextView
            android:id="@+id/tv_food_order_food_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:fontFamily="@font/font_gd_13"
            android:maxLines="1"
            android:text="고추잡채"
            android:textAlignment="center"
            android:textColor="@color/color_000000"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_food_order_food_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:fontFamily="@font/font_gd_15"
            android:maxLines="1"
            android:text="0원"
            android:textAlignment="center"
            android:textColor="@color/color_000000"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_food_order_food_name"
            tools:ignore="SpUsage" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/border_rect_0_0_0_0_1dp_e9e9e9_ffffff"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_food_order_food_price">

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/font_gd_13"
                android:gravity="center"
                android:text="@string/item_food_order_minus"
                android:textAlignment="center"
                android:textColor="@color/color_777777"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_e9e9e9" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/font_gd_13"
                android:gravity="center"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/color_4300ff"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_e9e9e9" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/font_gd_13"
                android:gravity="center"
                android:text="@string/item_food_order_plus"
                android:textAlignment="center"
                android:textColor="@color/color_777777"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>