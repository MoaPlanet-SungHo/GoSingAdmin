<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header_slide_menu_member_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="17dp"
        android:paddingEnd="0dp">

        <ImageView
            android:id="@+id/iv_header_slide_menu_profile"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/header_slide_menu_profile_description"
            android:scaleType="fitXY"
            android:src="@drawable/ic_new"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_header_slide_menu_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:drawableEnd="@drawable/ic_aaaaaa_arrow"
            android:fontFamily="@font/font_gd_17"
            android:text="asd@asd.com"
            android:textColor="@color/color_000000"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_header_slide_menu_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_header_slide_menu_profile"
            app:layout_constraintTop_toTopOf="@id/iv_header_slide_menu_profile"
            tools:ignore="SpUsage" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/border_rect_4_4_4_4_1dp_e9e9e9_ffffff"
            android:paddingStart="15dp"
            android:paddingTop="14dp"
            android:paddingEnd="15dp"
            android:paddingBottom="14dp"
            app:layout_constraintTop_toBottomOf="@id/iv_header_slide_menu_profile">

            <TextView
                android:id="@+id/tv_header_slide_menu_point_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/header_slide_menu_point_title"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_header_slide_menu_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_gd_17"
                android:text="100,000원"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_header_slide_menu_point_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_header_slide_menu_point_title"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_header_slide_menu_active_schedule_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:drawableStart="@drawable/ic_question_mark"
                android:drawablePadding="4dp"
                android:fontFamily="@font/font_gd_13"
                android:text="활성 예정 : 1,000원"
                android:textColor="@color/color_777777"
                android:textSize="9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_header_slide_menu_point"
                tools:ignore="SpUsage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8.7dp"
        android:layout_marginTop="18dp"
        android:background="@color/color_f5f5f5" />

</LinearLayout>