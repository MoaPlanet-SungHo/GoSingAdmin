<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff">

    <com.moaplanet.gosingadmin.common.view.CommonTitleBar
            android:id="@+id/common_fragment_customer_center_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/fragment_customer_center_title" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/common_fragment_customer_center_title">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/font_gd_17"
                android:text="@string/fragment_customer_center_what_help"
                android:textColor="@color/color_000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/common_fragment_customer_center_title"
                tools:ignore="SpUsage" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/font_gd_13"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4.3dp"
                android:text="@string/fragment_customer_center_one_to_one_plz"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/common_fragment_customer_center_title"
                tools:ignore="SpUsage" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/cl_customer_center_many_question_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                <ImageView
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:contentDescription="@string/fragment_customer_center_ic_description"
                        android:src="@drawable/ic_many_question" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:fontFamily="@font/font_gd_13"
                        android:text="@string/fragment_customer_center_many_question"
                        android:textColor="@color/color_000000"
                        android:textSize="13dp"
                        tools:ignore="SpUsage" />

            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_f5f5f5" />

            <LinearLayout
                    android:id="@+id/cl_customer_center_one_to_one_question_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                <ImageView
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:contentDescription="@string/fragment_customer_center_ic_description"
                        android:src="@drawable/ic_one_to_one_question" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:fontFamily="@font/font_gd_13"
                        android:text="@string/fragment_customer_center_one_to_one_question"
                        android:textColor="@color/color_000000"
                        android:textSize="13dp"
                        tools:ignore="SpUsage" />

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="6.7dp"
                android:layout_marginTop="52dp"
                android:background="@color/color_f5f5f5" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_gd_13"
                android:layout_marginTop="30dp"
                android:text="@string/fragment_customer_center_time"
                android:layout_marginStart="20dp"
                android:textColor="@color/color_aaaaaa"
                android:textSize="11dp"
                tools:ignore="SpUsage" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_gd_13"
                android:layout_marginTop="10dp"
                android:text="@string/fragment_customer_center_holiday"
                android:layout_marginStart="20dp"
                android:textColor="@color/color_aaaaaa"
                android:textSize="11dp"
                tools:ignore="SpUsage" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>