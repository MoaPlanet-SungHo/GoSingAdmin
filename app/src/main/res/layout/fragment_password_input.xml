<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.moaplanet.gosingadmin.common.view.CommonTitleBar
        android:id="@+id/common_password_input_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fragment_password_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:fontFamily="@font/font_gd_15"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/color_000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/common_password_input_toolbar"
        tools:ignore="SpUsage"
        tools:text="비밀번호" />

    <TextView
        android:id="@+id/tv_fragment_password_input_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/font_gd_13"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/color_ff4a24"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fragment_password_input_title"
        tools:ignore="SpUsage"
        tools:text="에러메시지" />

    <com.chaos.view.PinView
        android:id="@+id/pinview_fragment_password_input"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:cursorVisible="false"
        android:hint="●●●●●●"
        android:inputType="numberPassword"
        android:textColor="@color/select_password_input_box_line_and_text"
        android:textSize="20dp"
        app:itemCount="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fragment_password_input_validation"
        app:lineColor="@color/color_00000000"
        app:lineWidth="20dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/tv_fragment_password_input_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font_gd_13"
        android:lineSpacingExtra="4dp"
        android:textAlignment="center"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pinview_fragment_password_input"
        tools:ignore="SpUsage"
        tools:text="찾기" />
</androidx.constraintlayout.widget.ConstraintLayout>