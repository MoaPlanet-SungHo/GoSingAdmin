<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff">

    <com.moaplanet.gosingadmin.common.view.CommonTitleBar
            android:id="@+id/title_activity_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/activity_phone_number_change_title" />

    <LinearLayout
            android:id="@+id/ll_activity_phone_number_change_before_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_gd_15"
                android:gravity="center_horizontal"
                android:text="@string/activity_phone_number_change_sub_title"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                tools:ignore="SpUsage" />

        <TextView
                android:id="@+id/tv_activity_phone_number_change_plz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_gd_13"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5.3dp"
                android:text="@string/activity_phone_number_change_certified_plz"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                tools:ignore="SpUsage" />

    </LinearLayout>

    <TextView
            android:id="@+id/tv_activity_phone_number_change_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font_gd_13"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5.3dp"
            android:text="@string/activity_phone_number_change_sub_success"
            android:textColor="@color/color_000000"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

    <Button
            android:id="@+id/btn_activity_phone_number_change_certified"
            style="@style/CommonGradientButton"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/common_gradient_button_width_shadow_left_right_space"
            android:layout_marginEnd="@dimen/common_gradient_button_width_shadow_left_right_space"
            android:text="@string/activity_phone_number_change_certified"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
            android:id="@+id/fl_activity_phone_number_change"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_activity_phone_number" />

    <ProgressBar
            android:id="@+id/pb_activity_phone_number_change_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>