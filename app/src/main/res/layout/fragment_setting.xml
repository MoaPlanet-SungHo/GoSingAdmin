    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_line1"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/common_notice_title">

        <TextView
            android:id="@+id/payment_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/font_gd_13"
            android:lineSpacingExtra="4dp"
            android:text="@string/payment_password"
            android:textColor="@color/color_777777"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/payment_password_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_gd_15"
        android:lineSpacingExtra="4.7dp"
        android:text="@string/payment_password_change"
        android:textColor="@color/color_000000"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_line1"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/payment_password_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/payment_password_change"
        android:src="@drawable/right_small_arrow"
        app:layout_constraintBottom_toBottomOf="@id/payment_password_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/payment_password_change" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_line2"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_password_change">

        <TextView
            android:id="@+id/noti_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/font_gd_13"
            android:lineSpacingExtra="4dp"
            android:text="@string/noti_settings"
            android:textColor="@color/color_777777"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/gosing_benefit_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_gd_15"
        android:lineSpacingExtra="4.7dp"
        android:text="@string/gosing_benefit_noti"
        android:textColor="@color/color_000000"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@id/payment_password_change"
        app:layout_constraintTop_toBottomOf="@id/content_line2"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/gosing_benefit_noti_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font_gd_13"
        android:lineSpacingExtra="3.7dp"
        android:text="@string/gosing_benefit_noti_content"
        android:textColor="@color/color_aaaaaa"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@id/gosing_benefit_noti"
        app:layout_constraintTop_toBottomOf="@id/gosing_benefit_noti"
        tools:ignore="SpUsage" />


    <Switch
        android:id="@+id/gosing_benefit_noti_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="@id/gosing_benefit_noti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/gosing_benefit_noti" />

    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gosing_benefit_noti_content" />

    <TextView
        android:id="@+id/night_time_benfit_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_gd_15"
        android:lineSpacingExtra="4.7dp"
        android:text="@string/night_time_benefit_noti"
        android:textColor="@color/color_000000"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@id/gosing_benefit_noti"
        app:layout_constraintTop_toBottomOf="@id/line1"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/night_time_benefit_noti_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font_gd_13"
        android:lineSpacingExtra="3.7dp"
        android:text="@string/night_time_benefit_noti_content"
        android:textColor="@color/color_aaaaaa"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@id/night_time_benfit_noti"
        app:layout_constraintTop_toBottomOf="@id/night_time_benfit_noti"
        tools:ignore="SpUsage" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@id/night_time_benfit_noti"
        app:layout_constraintStart_toStartOf="@id/gosing_benefit_noti_switch"
        app:layout_constraintTop_toTopOf="@id/night_time_benfit_noti" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_line3"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/night_time_benefit_noti_content">

        <TextView
            android:id="@+id/service_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/font_gd_13"
            android:lineSpacingExtra="4dp"
            android:text="@string/service_info"
            android:textColor="@color/color_777777"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/terms_and_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_gd_15"
        android:lineSpacingExtra="4.7dp"
        android:text="@string/terms_and_policies"
        android:textColor="@color/color_000000"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@id/night_time_benfit_noti"
        app:layout_constraintTop_toBottomOf="@id/content_line3"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/terms_and_policies_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/terms_and_policies"
        android:src="@drawable/right_small_arrow"
        app:layout_constraintBottom_toBottomOf="@id/terms_and_policies"
        app:layout_constraintStart_toStartOf="@id/payment_password_change_button"
        app:layout_constraintTop_toTopOf="@id/terms_and_policies" />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/terms_and_policies" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_gd_15"
        android:lineSpacingExtra="4.7dp"
        android:text="@string/app_version"
        android:textColor="@color/color_000000"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@id/terms_and_policies"
        app:layout_constraintTop_toBottomOf="@id/line2"
        tools:ignore="SpUsage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_gd_13"
        android:lineSpacingExtra="3.7dp"
        android:text="@string/app_version_content"
        android:textColor="@color/color_777777"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@id/terms_and_policies_button"
        app:layout_constraintTop_toTopOf="@id/app_version"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>