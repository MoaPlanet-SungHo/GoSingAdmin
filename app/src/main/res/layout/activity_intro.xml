<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_intro"
    tools:context=".intro.IntroActivity">

    <LinearLayout
        android:id="@+id/ll_activity_intro_user_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_activity_intro_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_gradient_button"
            android:fontFamily="@font/font_gd_15"
            android:text="@string/activity_intro_login"
            android:textColor="@color/color_fafaff"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

        <Button
            android:id="@+id/btn_activity_intro_sign_up"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border_rect_4_4_4_4_0dp_trans_ffffff"
            android:fontFamily="@font/font_gd_15"
            android:text="@string/activity_intro_sign_up"
            android:textColor="@color/color_4300ff"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>