<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="313.3dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_rect_7_7_7_7_0dp_trans_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title_no_underline_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_gd_15"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:textColor="@color/color_000000"
        android:textSize="16dp"
        tools:ignore="SpUsage"
        tools:text="즐겨찾기 매장을 해제하시겠습니까?" />

    <TextView
        android:id="@+id/tv_dialog_title_no_underline_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/font_gd_13"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:textColor="@color/color_000000"
        android:textSize="15dp"
        tools:ignore="SpUsage"
        tools:text="즐겨찾기는 제약없이 등록/해제가 가능합니다." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_title_no_underline_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_gd_15"
            android:paddingStart="20dp"
            android:paddingTop="24dp"
            android:paddingEnd="20.3dp"
            android:paddingBottom="20dp"
            android:text="취소"
            android:textColor="@color/color_777777"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_dialog_title_no_underline_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_gd_15"
            android:paddingStart="20.3dp"
            android:paddingTop="24dp"
            android:paddingEnd="27dp"
            android:paddingBottom="20dp"
            android:text="확인"
            android:textColor="@color/color_4300ff"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

</LinearLayout>