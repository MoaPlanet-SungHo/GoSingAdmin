<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <com.moaplanet.gosingadmin.common.view.CommonTitleBar
        android:id="@+id/common_store_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/activity_store_title_bar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/common_store_title_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_store_info_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_store_add_info"
                android:textColor="@color/color_000000"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_store_name"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_store_info_add"
                tools:ignore="SpUsage" />

            <EditText
                android:id="@+id/et_store_input_name"
                style="@style/DefaultEditText"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/activity_store_input_name"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_store_name" />

            <TextView
                android:id="@+id/tv_store_now_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/border_rect_13_13_13_13_1dp_4300ff_ffffff"
                android:drawableStart="@drawable/ic_4300ff_location"
                android:drawablePadding="3.7dp"
                android:fontFamily="@font/font_gd_15"
                android:paddingStart="22dp"
                android:paddingTop="7.3dp"
                android:paddingEnd="22dp"
                android:paddingBottom="7.3dp"
                android:text="@string/activity_store_now_location"
                android:textColor="@color/color_4300ff"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/et_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/et_store_input_name"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_store_search_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/border_rect_13_13_13_13_1dp_4300ff_ffffff"
                android:drawableStart="@drawable/ic_4300ff_location"
                android:drawablePadding="3.7dp"
                android:fontFamily="@font/font_gd_15"
                android:paddingStart="22dp"
                android:paddingTop="7.3dp"
                android:paddingEnd="22dp"
                android:paddingBottom="7.3dp"
                android:text="@string/activity_store_search_address"
                android:textColor="@color/color_4300ff"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@id/et_store_input_name"
                app:layout_constraintEnd_toStartOf="@id/tv_store_now_location"
                app:layout_constraintTop_toBottomOf="@id/et_store_input_name"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_store_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_store_address"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_store_search_address"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_store_default_address"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_rect_0_0_0_0_1dp_e9e9e9_f8f8f8"
                app:layout_constraintEnd_toEndOf="@id/et_store_input_name"
                app:layout_constraintStart_toStartOf="@id/et_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/tv_store_address" />

            <EditText
                android:id="@+id/et_store_detail_address"
                style="@style/DefaultEditText"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="6dp"
                android:hint="@string/activity_store_input_detail_address"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="@id/tv_store_default_address"
                app:layout_constraintStart_toStartOf="@id/tv_store_default_address"
                app:layout_constraintTop_toBottomOf="@id/tv_store_default_address" />

            <TextView
                android:id="@+id/tv_store_short_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_store_short_address"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@id/et_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/et_store_detail_address"
                tools:ignore="SpUsage" />

            <EditText
                android:id="@+id/et_store_short_address"
                style="@style/DefaultEditText"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="7dp"
                android:hint="@string/activity_store_input_short_address"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="@id/et_store_input_name"
                app:layout_constraintStart_toStartOf="@id/et_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/tv_store_short_address" />

            <TextView
                android:id="@+id/tv_store_call_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_store_call_number"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@id/et_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/et_store_short_address"
                tools:ignore="SpUsage" />

            <EditText
                android:id="@+id/et_store_call_number"
                style="@style/DefaultEditText"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="7dp"
                android:hint="@string/activity_store_input_call_number"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:maxLength="13"
                android:inputType="phone"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="@id/et_store_input_name"
                app:layout_constraintStart_toStartOf="@id/et_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/tv_store_call_number" />

            <TextView
                android:id="@+id/tv_store_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_store_thumbnail"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@id/et_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/et_store_call_number"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_store_thumbnail_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_store_thumbnail_select"
                android:textColor="@color/color_aaaaaa"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_store_thumbnail"
                app:layout_constraintStart_toEndOf="@id/tv_store_thumbnail"
                tools:ignore="SpUsage" />

            <LinearLayout
                android:id="@+id/ll_store_thumbnail_group_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="17dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_store_thumbnail">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75.3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75.3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75.3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75.3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_store_thumbnail_group_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="17dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_store_thumbnail_group_one">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75.3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75.3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75.3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75.3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_store_thumbnail_info_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_store_thumbnail_info_one"
                android:textColor="@color/color_aaaaaa"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_store_thumbnail_group_two"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_store_thumbnail_info_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_store_thumbnail_info_two"
                android:textColor="@color/color_aaaaaa"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_store_thumbnail_info_one"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_store_thumbnail_info_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_store_thumbnail_info_three"
                android:textColor="@color/color_aaaaaa"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_store_thumbnail_info_two"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_store_room_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_store_room_info"
                android:textColor="@color/color_000000"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@id/et_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/tv_store_thumbnail_info_three"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_store_room_info_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_store_room_info_select"
                android:textColor="@color/color_aaaaaa"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_store_room_info"
                app:layout_constraintStart_toEndOf="@id/tv_store_room_info"
                tools:ignore="SpUsage" />

            <LinearLayout
                android:id="@+id/ll_store_room_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_store_room_info_select">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <CheckBox
                        android:id="@+id/cb_store_large_room"
                        style="@style/AllCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대형룸"
                        android:textColor="@color/color_4300ff"
                        app:layout_constraintBottom_toBottomOf="@id/et_store_large_room_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/et_store_large_room_price" />

                    <TextView
                        android:id="@+id/tv_store_large_room_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="47dp"
                        android:fontFamily="@font/font_gd_14"
                        android:text="가격"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/et_store_large_room_price"
                        app:layout_constraintStart_toEndOf="@id/cb_store_large_room"
                        app:layout_constraintTop_toTopOf="@id/et_store_large_room_price"
                        tools:ignore="SpUsage" />

                    <EditText
                        android:id="@+id/et_store_large_room_price"
                        style="@style/DefaultEditText"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="7dp"
                        android:hint="@string/activity_store_large_room_input_price"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_store_large_room_price"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_store_large_room_personnel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_gd_14"
                        android:text="인원"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/sp_store_large_room_personnel"
                        app:layout_constraintStart_toStartOf="@id/tv_store_large_room_price"
                        app:layout_constraintTop_toTopOf="@id/sp_store_large_room_personnel"
                        tools:ignore="SpUsage" />

                    <Spinner
                        android:id="@+id/sp_store_large_room_personnel"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/border_rect_0_0_0_0_1dp_e9e9e9_ffffff"
                        android:entries="@array/store_large_room_array"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_store_large_room_personnel"
                        app:layout_constraintTop_toBottomOf="@id/et_store_large_room_price" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <CheckBox
                        android:id="@+id/cb_store_middle_room"
                        style="@style/AllCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중형룸"
                        android:textColor="@color/color_4300ff"
                        app:layout_constraintBottom_toBottomOf="@id/et_store_middle_room_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/et_store_middle_room_price" />

                    <TextView
                        android:id="@+id/tv_store_middle_room_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="47dp"
                        android:fontFamily="@font/font_gd_14"
                        android:text="가격"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/et_store_middle_room_price"
                        app:layout_constraintStart_toEndOf="@id/cb_store_middle_room"
                        app:layout_constraintTop_toTopOf="@id/et_store_middle_room_price"
                        tools:ignore="SpUsage" />

                    <EditText
                        android:id="@+id/et_store_middle_room_price"
                        style="@style/DefaultEditText"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="7dp"
                        android:hint="@string/activity_store_large_room_input_price"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_store_middle_room_price"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_store_middle_room_personnel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_gd_14"
                        android:text="인원"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/sp_store_middle_room_personnel"
                        app:layout_constraintStart_toStartOf="@id/tv_store_middle_room_price"
                        app:layout_constraintTop_toTopOf="@id/sp_store_middle_room_personnel"
                        tools:ignore="SpUsage" />

                    <Spinner
                        android:id="@+id/sp_store_middle_room_personnel"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/border_rect_0_0_0_0_1dp_e9e9e9_ffffff"
                        android:entries="@array/store_middle_room_array"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_store_middle_room_personnel"
                        app:layout_constraintTop_toBottomOf="@id/et_store_middle_room_price" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <CheckBox
                        android:id="@+id/cb_store_small_room"
                        style="@style/AllCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소형룸"
                        android:textColor="@color/color_4300ff"
                        app:layout_constraintBottom_toBottomOf="@id/et_store_small_room_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/et_store_small_room_price" />

                    <TextView
                        android:id="@+id/tv_store_small_room_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="47dp"
                        android:fontFamily="@font/font_gd_14"
                        android:text="가격"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/et_store_small_room_price"
                        app:layout_constraintStart_toEndOf="@id/cb_store_small_room"
                        app:layout_constraintTop_toTopOf="@id/et_store_small_room_price"
                        tools:ignore="SpUsage" />

                    <EditText
                        android:id="@+id/et_store_small_room_price"
                        style="@style/DefaultEditText"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="7dp"
                        android:hint="@string/activity_store_large_room_input_price"
