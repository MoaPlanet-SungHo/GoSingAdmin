<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="313.3dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_rect_7_7_7_7_0dp_trans_ffffff"
    android:orientation="vertical"
    android:paddingStart="29.7dp"
    android:paddingEnd="29.7dp">

    <TextView
        android:id="@+id/tv_dialog_point_history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_gd_15"
        android:gravity="center_horizontal"
        android:text="포인트 충전"
        android:textColor="@color/color_000000"
        android:textSize="16dp"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tv_point_history_dialog_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_4300ff_plus"
        android:drawablePadding="10dp"
        android:fontFamily="@font/font_gd_17"
        android:textColor="@color/color_000000"
        android:textSize="28.3dp"
        tools:ignore="SpUsage"
        tools:text="0원" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/under_line_height"
        android:layout_marginTop="20dp"
        android:background="@color/color_f5f5f5" />

    <LinearLayout
        android:id="@+id/ll_dialog_point_history_one_content_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_point_history_one_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_gd_13"
            android:text="일시"
            android:textColor="@color/color_000000"
            android:textSize="11dp"
            tools:ignore="SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_gd_15"
            android:gravity="end"
            android:text="2019.00.00  00:00:00"
            android:textColor="@color/color_000000"
            android:textSize="11dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dialog_point_history_two_content_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_gd_13"
            android:text="가맹점"
            android:textColor="@color/color_000000"
            android:textSize="11dp"
            tools:ignore="SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_gd_15"
            android:gravity="end"
            android:text="강남 노래타운"
            android:textColor="@color/color_000000"
            android:textSize="11dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dialog_point_history_three_content_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_gd_13"
            android:text="유효기간"
            android:textColor="@color/color_000000"
            android:textSize="11dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_ll_dialog_point_history_three_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_gd_15"
            android:gravity="end"
            android:text="2019.00.00  00:00:00"
            android:textColor="@color/color_000000"
            android:textSize="11dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_point_history_dialog_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:fontFamily="@font/font_gd_15"
        android:paddingStart="20dp"
        android:paddingTop="24dp"
        android:paddingEnd="0dp"
        android:paddingBottom="20dp"
        android:text="확인"
        android:textColor="@color/color_4300ff"
        android:textSize="14dp"
        tools:ignore="SpUsage" />

</LinearLayout>