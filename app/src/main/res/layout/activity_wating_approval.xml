<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <com.moaplanet.gosingadmin.common.view.CommonTitleBar
        android:id="@+id/common_waiting_approval_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/activity_waiting_approval_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="59.7dp"
            android:layout_marginEnd="59.7dp"
            android:fontFamily="@font/font_gd_17"
            android:lineSpacingExtra="6dp"
            android:text="@string/activity_waiting_approval_admin_approval"
            android:textAlignment="center"
            android:textColor="@color/color_000000"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="94.3dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="94.3dp"
            android:fontFamily="@font/font_gd_15"
            android:lineSpacingExtra="5dp"
            android:text="@string/activity_waiting_approval_take_two_day"
            android:textAlignment="center"
            android:textColor="@color/color_000000"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_waiting_approval_finish"
        style="@style/CommonGradientButton"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:text="@string/activity_waiting_approval_app_finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>