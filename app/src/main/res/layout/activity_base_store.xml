                android:layout_marginStart="26dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_base_store_address"
                android:textColor="@color/color_000000"
                android:textSize="15.6dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_activity_base_store_search_address"
