                app:layout_constraintStart_toStartOf="@id/et_activity_base_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_base_store_address"
                tools:ignore="SpUsage" />

            <EditText
                android:id="@+id/et_activity_base_store_detail_address"
