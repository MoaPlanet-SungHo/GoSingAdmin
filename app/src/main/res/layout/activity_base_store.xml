                android:textColor="@color/color_4300ff"
                android:textSize="15.6dp"
                app:layout_constraintEnd_toEndOf="@id/et_activity_base_store_input_name"
                app:layout_constraintEnd_toStartOf="@id/tv_activity_base_store_now_location"
                app:layout_constraintTop_toBottomOf="@id/et_activity_base_store_input_name"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_activity_base_store_address"
