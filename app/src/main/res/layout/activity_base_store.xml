                android:layout_width="0dp"
                android:layout_height="49.4dp"
                android:layout_marginTop="9.1dp"
                android:hint="@string/activity_base_store_input_short_address"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="@id/et_activity_base_store_input_name"
                app:layout_constraintStart_toStartOf="@id/et_activity_base_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_base_store_short_address" />

            <TextView
