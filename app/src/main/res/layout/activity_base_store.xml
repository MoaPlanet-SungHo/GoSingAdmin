                android:layout_marginTop="31.2dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_base_store_call_number"
                android:textColor="@color/color_000000"
                android:textSize="15.6dp"
                app:layout_constraintStart_toStartOf="@id/et_activity_base_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/et_activity_base_store_short_address"
                tools:ignore="SpUsage" />

            <EditText
                android:id="@+id/et_activity_base_store_call_number"
