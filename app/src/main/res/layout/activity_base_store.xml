                app:layout_constraintEnd_toEndOf="@id/tv_activity_base_store_default_address"
                app:layout_constraintStart_toStartOf="@id/tv_activity_base_store_default_address"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_base_store_default_address" />

            <TextView
                android:id="@+id/tv_activity_base_store_short_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31.2dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_base_store_short_address"
                android:textColor="@color/color_000000"
                android:textSize="15.6dp"
                app:layout_constraintStart_toStartOf="@id/et_activity_base_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/et_activity_base_store_detail_address"
                tools:ignore="SpUsage" />

            <EditText
                android:id="@+id/et_activity_base_store_short_address"
