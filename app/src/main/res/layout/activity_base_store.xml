                app:layout_constraintStart_toEndOf="@id/tv_activity_base_store_room_info"
                tools:ignore="SpUsage" />

            <LinearLayout
                android:id="@+id/ll_activity_base_store_room_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="3.9dp"
                android:layout_marginEnd="26dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_base_store_room_info_select">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp">

                    <CheckBox
                        android:id="@+id/cb_activity_base_store_large_room"
                        style="@style/AllCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="13dp"
                        android:paddingEnd="0dp"
                        android:text="@string/activity_base_large_room"
                        android:textColor="@color/color_4300ff"
                        android:textSize="18.2dp"
                        app:layout_constraintBottom_toBottomOf="@id/et_activity_base_store_large_room_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/et_activity_base_store_large_room_price"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tv_activity_base_store_large_room_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="61.1dp"
                        android:fontFamily="@font/font_gd_14"
                        android:text="@string/activity_base_room_price"
                        android:textColor="@color/color_000000"
                        android:textSize="15.6dp"
                        app:layout_constraintBottom_toBottomOf="@id/et_activity_base_store_large_room_price"
                        app:layout_constraintStart_toEndOf="@id/cb_activity_base_store_large_room"
                        app:layout_constraintTop_toTopOf="@id/et_activity_base_store_large_room_price"
                        tools:ignore="SpUsage" />

                    <EditText
                        android:id="@+id/et_activity_base_store_large_room_price"
                        style="@style/DefaultEditText"
                        android:layout_width="0dp"
                        android:layout_height="49.4dp"
                        android:layout_marginStart="9.1dp"
                        android:hint="@string/activity_base_store_input_price"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="13"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_activity_base_store_large_room_price"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_activity_base_store_large_room_personnel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_gd_14"
                        android:text="@string/activity_base_room_personnel"
                        android:textColor="@color/color_000000"
                        android:textSize="15.6dp"
                        app:layout_constraintBottom_toBottomOf="@id/sp_activity_base_store_large_room_personnel"
                        app:layout_constraintStart_toStartOf="@id/tv_activity_base_store_large_room_price"
                        app:layout_constraintTop_toTopOf="@id/sp_activity_base_store_large_room_personnel"
                        tools:ignore="SpUsage" />

                    <Spinner
                        android:id="@+id/sp_activity_base_store_large_room_personnel"
                        android:layout_width="0dp"
                        android:layout_height="49.4dp"
                        android:layout_marginStart="9.1dp"
                        android:layout_marginTop="7.8dp"
                        android:background="@drawable/border_rect_0_0_0_0_1dp_e9e9e9_ffffff"
                        android:entries="@array/store_large_room_array"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_activity_base_store_large_room_personnel"
                        app:layout_constraintTop_toBottomOf="@id/et_activity_base_store_large_room_price" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
