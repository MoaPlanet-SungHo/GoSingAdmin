                app:layout_constraintEnd_toEndOf="@id/et_activity_base_store_input_name"
                app:layout_constraintStart_toStartOf="@id/et_activity_base_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_base_store_call_number" />

            <TextView
                android:id="@+id/tv_activity_base_ceo_call_number"
                android:layout_width="wrap_content"
