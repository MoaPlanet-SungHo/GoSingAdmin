                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_base_store_thumbnail"
                android:textColor="@color/color_000000"
                android:textSize="15.6dp"
                app:layout_constraintStart_toStartOf="@id/et_activity_base_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/et_activity_base_ceo_call_number"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_activity_base_store_thumbnail_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6.5dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_base_store_select"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14.3dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_activity_base_store_thumbnail"
                app:layout_constraintStart_toEndOf="@id/tv_activity_base_store_thumbnail"
                tools:ignore="SpUsage" />

            <LinearLayout
                android:id="@+id/ll_activity_base_store_thumbnail_group_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22.1dp"
                android:layout_marginTop="9.1dp"
                android:layout_marginEnd="22.1dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_base_store_thumbnail">

                <ImageView
                    android:id="@+id/iv_activity_base_store_image_one"
                    android:layout_width="0dp"
                    android:layout_height="97.89dp"
                    android:layout_marginStart="3.9dp"
                    android:layout_marginEnd="3.9dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_base_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:id="@+id/iv_activity_base_store_image_two"
                    android:layout_width="0dp"
                    android:layout_height="97.89dp"
                    android:layout_marginStart="3.9dp"
                    android:layout_marginEnd="3.9dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_base_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:id="@+id/iv_activity_base_store_image_three"
                    android:layout_width="0dp"
                    android:layout_height="97.89dp"
                    android:layout_marginStart="3.9dp"
                    android:layout_marginEnd="3.9dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_base_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:id="@+id/iv_activity_base_store_image_four"
                    android:layout_width="0dp"
                    android:layout_height="97.89dp"
                    android:layout_marginStart="3.9dp"
                    android:layout_marginEnd="3.9dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_base_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activity_base_store_thumbnail_group_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22.1dp"
                android:layout_marginTop="7.8dp"
                android:layout_marginEnd="22.1dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_activity_base_store_thumbnail_group_one">

                <ImageView
                    android:id="@+id/iv_activity_base_store_image_five"
                    android:layout_width="0dp"
                    android:layout_height="97.89dp"
                    android:layout_marginStart="3.9dp"
                    android:layout_marginEnd="3.9dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_base_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:id="@+id/iv_activity_base_store_image_six"
                    android:layout_width="0dp"
                    android:layout_height="97.89dp"
                    android:layout_marginStart="3.9dp"
                    android:layout_marginEnd="3.9dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_base_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:id="@+id/iv_activity_base_store_image_seven"
                    android:layout_width="0dp"
                    android:layout_height="97.89dp"
                    android:layout_marginStart="3.9dp"
                    android:layout_marginEnd="3.9dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_base_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

                <ImageView
                    android:id="@+id/iv_activity_base_store_image_eight"
                    android:layout_width="0dp"
                    android:layout_height="97.89dp"
                    android:layout_marginStart="3.9dp"
                    android:layout_marginEnd="3.9dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/activity_base_store_thumbnail"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_store_thumbnail" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_activity_base_store_thumbnail_info_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="19.5dp"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_base_store_thumbnail_info_one"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14.3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_activity_base_store_thumbnail_group_two"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_activity_base_store_thumbnail_info_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_base_store_thumbnail_info_two"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14.3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_base_store_thumbnail_info_one"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_activity_base_store_thumbnail_info_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_base_store_thumbnail_info_three"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14.3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_base_store_thumbnail_info_two"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_activity_base_store_room_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31.2dp"
                android:fontFamily="@font/font_gd_14"
                android:text="@string/activity_base_store_room_info"
                android:textColor="@color/color_000000"
                android:textSize="15.6dp"
                app:layout_constraintStart_toStartOf="@id/et_activity_base_store_input_name"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_base_store_thumbnail_info_three"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_activity_base_store_room_info_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6.5dp"
                android:fontFamily="@font/font_gd_13"
                android:text="@string/activity_base_store_room_info_select"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14.3dp"
