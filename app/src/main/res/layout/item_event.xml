<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <TextView
        android:id="@+id/tv_item_event_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:fontFamily="@font/font_gd_15"
        android:maxLines="1"
        android:textColor="@color/color_000000"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@id/tv_item_event_date"
        app:layout_constraintEnd_toStartOf="@id/tv_event_new_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"
        tools:text="GOSING 이벤트" />

    <TextView
        android:id="@+id/tv_item_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="20dp"
        tools:text="기간 : 2019.10.14 ~ 2030.10.14"
        android:textColor="@color/color_aaaaaa"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_item_event_title"
        app:layout_constraintTop_toBottomOf="@id/tv_item_event_title"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/iv_event_arrow"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_aaaaaa_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tv_event_new_ic"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_new"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_event_arrow"
        app:layout_constraintEnd_toStartOf="@id/iv_event_arrow"
        app:layout_constraintTop_toTopOf="@id/iv_event_arrow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/under_line_height"
        android:background="@color/color_f5f5f5"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>