<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <com.moaplanet.gosingadmin.common.view.CommonTitleBar
        android:id="@+id/common_ad_select_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/fragment_ad_select_title" />

    <LinearLayout
        android:id="@+id/ll_ad_select_point_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border_rect_4_4_4_4_07dp_e9e9e9_fcfcfc"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/common_ad_select_title_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableEnd="@drawable/ic_question_mark"
            android:drawablePadding="7dp"
            android:fontFamily="@font/font_gd_15"
            android:text="@string/fragment_ad_select_paymentable_amount"
            android:textColor="@color/color_000000"
            android:textSize="10dp"
            tools:ignore="SpUsage" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/font_gd_17"
            android:text="150,000 원"
            android:textColor="@color/color_000000"
            android:textSize="22dp"
            tools:ignore="SpUsage" />

        <Button
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_rect_11_11_11_11_0dp_trans_4300ff"
            android:fontFamily="@font/font_gd_15"
            android:text="@string/fragment_ad_select_charge_point"
            android:textColor="@color/color_ffffff"
            android:textSize="10dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ad_select_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font_gd_17"
        android:lineSpacingExtra="5.3dp"
        android:text="@string/fragment_ad_sub_title"
        android:textAlignment="center"
        android:textColor="@color/color_000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_ad_select_point_group"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tv_ad_select_ad_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_gd_13"
        android:lineSpacingExtra="4dp"
        android:text="@string/activity_ad_select_ad_explanation"
        android:textAlignment="center"
        android:textColor="@color/color_000000"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ad_select_sub_title"
        tools:ignore="SpUsage" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ad_select_thirty_day_product_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toStartOf="@id/view_ad_select_product_underline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ad_select_ad_explanation">

        <ImageView
            android:id="@+id/iv_ad_select_thirty_day_product"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:contentDescription="@string/fragment_ad_select_product_description"
            android:scaleType="fitXY"
            android:src="@drawable/bg_ad_thirty_day_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ad_select_ad_thirty_day_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font_gd_13"
            android:text="@string/fragment_ad_select_thirty_day_product"
            android:textColor="@color/color_000000"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_ad_select_thirty_day_product"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_ad_select_ad_thirty_day_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/font_gd_17"
            android:text="100,000원"
            android:textColor="@color/color_000000"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@id/tv_ad_select_ad_thirty_day_sale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ad_select_ad_thirty_day_product"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_ad_select_ad_thirty_day_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_gd_15"
            android:text="50% 할인"
            android:textColor="@color/color_ff4a24"
            android:textSize="9dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_ad_select_ad_thirty_day_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_ad_select_ad_thirty_day_price"
            app:layout_constraintTop_toTopOf="@id/tv_ad_select_ad_thirty_day_price"
            tools:ignore="SpUsage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_ad_select_product_underline"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="36.5dp"
        android:layout_marginBottom="36.5dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintBottom_toBottomOf="@id/cl_ad_select_thirty_day_product_group"
        app:layout_constraintEnd_toStartOf="@id/cl_ad_select_fifteen_day_product_group"
        app:layout_constraintStart_toEndOf="@id/cl_ad_select_thirty_day_product_group"
        app:layout_constraintTop_toTopOf="@id/cl_ad_select_thirty_day_product_group" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ad_select_fifteen_day_product_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_ad_select_product_underline"
        app:layout_constraintTop_toTopOf="@id/cl_ad_select_thirty_day_product_group">

        <ImageView
            android:id="@+id/iv_ad_select_fifteen_day_product"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:contentDescription="@string/fragment_ad_select_product_description"
            android:scaleType="fitXY"
            android:src="@drawable/bg_ad_thirty_day_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ad_select_ad_fifteen_day_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font_gd_13"
            android:text="@string/fragment_ad_select_fifteen_day_product"
            android:textColor="@color/color_000000"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_ad_select_fifteen_day_product"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_ad_select_ad_fifteen_day_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/font_gd_17"
            android:text="100,000원"
            android:textColor="@color/color_000000"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@id/tv_ad_select_ad_fifteen_day_sale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ad_select_ad_fifteen_day_product"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_ad_select_ad_fifteen_day_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_gd_15"
            android:text="50% 할인"
            android:textColor="@color/color_ff4a24"
            android:textSize="9dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_ad_select_ad_fifteen_day_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_ad_select_ad_fifteen_day_price"
            app:layout_constraintTop_toTopOf="@id/tv_ad_select_ad_fifteen_day_price"
            tools:ignore="SpUsage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ad_select_not_use_ad"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_gd_15"
            android:text="@string/fragment_ad_select_not_use_ad"
            android:textColor="@color/color_aaaaaa"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ad_select_use_ad"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:background="@color/color_f5f5f5"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_ad_select_use_ad_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_gd_15"
            android:text="@string/fragment_ad_select_use_product"
            android:textColor="@color/color_000000"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@id/tv_ad_select_use_ad_product_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_ad_select_use_ad_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/font_gd_13"
            android:text="@string/fragment_ad_select_use_product_info"
            android:textColor="@color/color_000000"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ad_select_use_ad_product"
            tools:ignore="SpUsage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>