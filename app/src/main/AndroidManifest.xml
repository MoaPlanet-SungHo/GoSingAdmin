<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moaplanet.gosingadmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- NETWORK_PROVIDER 접근 권한 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- GPS_PROVIDER 접근 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".GoSingAdminApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".intro.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".intro.GoSingAdminConfirmPermissionActivity" />
        <activity android:name=".intro.sign_up.activity.SignUpActivity" />
        <activity android:name=".intro.login.LoginActivity" />
        <activity android:name=".main.MainActivity" />
        <activity android:name=".main.submenu.point.activity.PointHistoryActivity" />
        <activity android:name=".main.submenu.notification.NotificationActivity" />
        <activity android:name=".main.submenu.ad.activity.GoSingAdActivity" />
        <activity android:name=".main.submenu.store.StoreActivity" />
        <activity android:name=".main.submenu.review.ReviewActivity" />
        <activity android:name=".main.qrpayment.PaymentActivity" />
        <activity android:name=".main.qrpayment.PaymentQrActivity" />
        <activity android:name=".main.submenu.food.activity.FoodOrderActivity" />
        <activity android:name=".main.slide_menu.setting.SettingDetailActivity" />
        <activity android:name=".main.slide_menu.setting.SettingDetailDataActivity" />
        <activity android:name=".main.submenu.non_member.activity.NonMemberSaveActivity" />
        <activity android:name=".main.submenu.charge.activity.ChargeActivity" />
        <activity android:name=".main.submenu.charge.activity.CardRegisterActivity" />
        <activity android:name=".main.submenu.pointwithdrawal.PointWithDrawalActivity" />
    </application>

</manifest>